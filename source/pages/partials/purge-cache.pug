section(data-section="purge-cache")
  header
    .logo(alt=htmlWebpackPlugin.options.t('purgeCache.logoAlt'))
      include ../../media/logo.svg

    h1.title!=htmlWebpackPlugin.options.t('purgeCache.title')

  p.description!=htmlWebpackPlugin.options.t('purgeCache.description')

  .title-container
    h3.title!=htmlWebpackPlugin.options.t('purgeCache.form.title')
  .form-container

    form#purge-cache-form
      .label.required!=htmlWebpackPlugin.options.t('purgeCache.field.domainName')
      input.input-field(name="domain" type="text" placeholder="example.com" required)
      .label!=htmlWebpackPlugin.options.t('purgeCache.field.recordType')
      select.input-field(name="type")
        option(value="A") A
        option(value="AAAA") AAAA
        option(value="CAA") CAA
        option(value="CNAME") CNAME
        option(value="DNSKEY") DNSKEY
        option(value="DS") DS
        option(value="HTTPS") HTTPS
        option(value="LOC") LOC
        option(value="MX") MX
        option(value="NAPTR") NAPTR
        option(value="NS") NS
        option(value="PTR") PTR
        option(value="SPF") SPF
        option(value="SRV") SRV
        option(value="SVCB") SVCB
        option(value="SSHFP") SSHFP
        option(value="TLSA") TLSA
        option(value="TXT") TXT
      br
      input#submit-button(type="submit" value=htmlWebpackPlugin.options.t('purgeCache.field.submit'))

    #info-message
